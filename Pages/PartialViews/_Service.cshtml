@model ServiceModel

<div id="our-services" class="container-xxl py-5">
    <div class="container">
        <div class="text-center">
            <div class="bg-primary mb-3 mx-auto" style="width: 60px; height: 2px;"></div>
            <h1 class="display-5 mb-5">Our Services</h1>
        </div>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <div class="col wow fadeIn" data-wow-delay="0.1s">
                <div class="card h-100">
                    <img src="~/img/Installing_Software.webp" class="card-img-top img-fluid" alt="Installing Software">
                    <div class="card-body">
                        <h5 class="card-title">Installing Software</h5>
                        <p class="card-text">Office 365 Licensing for personal or business needs</p>
                        <a asp-page="/Martket_Software" class="btn btn-primary">View More</a>
                    </div>
                </div>
            </div>
            <div class="col wow fadeIn" data-wow-delay="0.3s">
                <div class="card h-100">
                    <img src="~/img/software_development.webp" class="card-img-top img-fluid" alt="Custom Software Development">
                    <div class="card-body">
                        <h5 class="card-title">Software Development</h5>
                        <p class="card-text">Custom software development tailored to your business needs.</p>
                        <a href="software-development-details" class="btn btn-primary">View More</a>
                    </div>
                </div>
            </div>
            <div class="col wow fadeIn" data-wow-delay="0.5s">
                <div class="card h-100">
                    <img src="~/img/quality_and_safety_software.webp" class="card-img-top img-fluid" alt="Quality and Safety Software">
                    <div class="card-body">
                        <h5 class="card-title">Quality and Safety Software</h5>
                        <p class="card-text">Software solutions ensuring quality and safety standards for your operations.</p>
                        <a href="quality-safety-software-details" class="btn btn-primary">View More</a>
                    </div>
                </div>
            </div>
            <div class="col wow fadeIn" data-wow-delay="0.7s">
                <div class="card h-100">
                    <img src="~/img/hosting.webp" class="card-img-top img-fluid" alt="Hosting">
                    <div class="card-body">
                        <h5 class="card-title">Hosting</h5>
                        <p class="card-text">Effective access control solutions to secure your premises.</p>
                        <a href="hosting-details" class="btn btn-primary">View More</a>
                    </div>
                </div>
            </div>
            <div class="col wow fadeIn" data-wow-delay="0.9s">
                <div class="card h-100">
                    <img src="~/img/enterprise_email.webp" class="card-img-top img-fluid" alt="Email Enterprise">
                    <div class="card-body">
                        <h5 class="card-title">Email Enterprise</h5>
                        <p class="card-text">Comprehensive email solutions for enterprises, ensuring secure and reliable communication.</p>
                        <a href="email-enterprise-details" class="btn btn-primary">View More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

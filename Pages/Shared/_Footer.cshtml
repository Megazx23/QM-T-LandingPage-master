@model QualityMatters.Pages.Shared._FooterModel

<div class="container-fluid bg-dark text-secondary footer mt-5 py-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-3 col-md-6">
                <h5 class="text-light mb-4">Address</h5>
                <p class="mb-2"><i class="fa fa-envelope me-3"></i> info@tech.q-matters.com</p>
                <div class="d-flex pt-2">
                    <a class="btn btn-square btn-outline-secondary rounded-circle me-2" href=""><i class="fab fa-twitter"></i></a>
                    <a class="btn btn-square btn-outline-secondary rounded-circle me-2" href=""><i class="fab fa-facebook-f"></i></a>
                    <a class="btn btn-square btn-outline-secondary rounded-circle me-2" href=""><i class="fab fa-youtube"></i></a>
                    <a class="btn btn-square btn-outline-secondary rounded-circle me-2" href=""><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <h5 class="text-light mb-4">Services</h5>
                <a class="btn btn-link" href="">Desarrollo de Software</a>
                <a class="btn btn-link" href="">Aplicacion Web</a>
                <a class="btn btn-link" href="">Aplicaciones Móviles</a>
                <a class="btn btn-link" href="">Aplicaciones de Escritorio</a>
                <a class="btn btn-link" href="">Desarrollo para el area de Calidad</a>
            </div>
            <div class="col-lg-3 col-md-6">
                <h5 class="text-light mb-4">Quick Links</h5>
                <a class="btn btn-link" href="">Acerda de Nosotros</a>
                <a class="btn btn-link" href="">Contactanos</a>
                <a class="btn btn-link" href="">Nuestros Servicios</a>
                <a class="btn btn-link" href="">Terminos & Condiciones</a>
                <a class="btn btn-link" href="">Soporte</a>
            </div>
            <div class="col-lg-3 col-md-6">
                <h5 class="text-light mb-4">Envianos un Mensaje!</h5>
                <p>Pregunta tus dudas.</p>
                <form method="post" asp-page-handler="SendEmail">
                    <div class="position-relative w-100">
                        <input class="form-control bg-transparent border-secondary w-100 py-3 ps-4 pe-5" type="email" name="Email" placeholder="Tu email" required>
                        <textarea class="form-control bg-transparent border-secondary w-100 py-3 ps-4 pe-5 mt-2" name="Message" placeholder="Tu mensaje aquí" required></textarea>
                        <button type="submit" class="btn btn-primary py-2 position-absolute top-0 end-0 mt-2 me-2">Enviar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
